<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.sfr.dbuttonapplication.activity.login.RegisterActivity">


    <View
        android:id="@+id/statusBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <include
        android:id="@+id/title"
        layout="@layout/title_view_extra"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/statusBarView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="34dp"
        android:textSize="14sp"
        android:lineSpacingExtra="15dp"
        android:lineSpacingMultiplier="1"
        android:textColor="@color/user_data_text"
        android:layout_marginRight="34dp"
        android:text="@string/register_protect" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/left_selector"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_common_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_left"
            android:layout_centerVertical="true"
            android:text="@string/common_cancel"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/img_right"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_common_accpet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_right"
            android:layout_marginRight="10dp"
            android:text="@string/common_accpet"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>

