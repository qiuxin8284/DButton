<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sfr.dbuttonapplication.activity.PhoneSearchActivity">

    <Button
        android:id="@+id/btn_start_search_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_search_phone"/>
    <Button
        android:id="@+id/btn_stop_search_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stop_search_phone"/>
</LinearLayout>
